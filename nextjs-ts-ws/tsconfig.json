{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "dom",
      "es7",
      "esnext.asynciterable"
    ],
    "jsx": "preserve",
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "sourceMap": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}
